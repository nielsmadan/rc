[alias]
    ca = commit -am
    caa = commit -a --amend --no-edit
    cm = commit -m
    ci = commit

    ; show remote branches and sort them by date of last commit
    brd = "!f() { for k in `git branch -a|sed s/^..//`;do echo -e `git log -1 --pretty=format:\"%Cgreen%ci %Cblue%cr%Creset\" \"$k\"`\t\"$k\";done|sort; }; f"

    co = checkout
    com = checkout main
    cob = checkout -b

    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue

    bl = branch -l
    bd = branch -D

    s = status

    sm = submodule

    l = log --pretty=oneline --abbrev-commit
    gl = log --graph --pretty=oneline --abbrev-commit

    ; cl = "!f() { git clone $* ; case $* in *your.host.com*) git config user.name \"Your Name\" && git config user.email \"your.email@company.com\" ;; esac }; f"

    r = rebase
    ri = rebase --interactive
    rbm = rebase main
    rbc = rebase --continue
    rba = rebase --abort

    rhom = reset --hard origin/main

    pr = pull --rebase

    st = stash
    sp = stash pop

    po = push origin
    pom = push origin main
    pof = push origin -f

    ; heroku
    phm = push heroku main

    ; gerrit
    porfm = push origin HEAD:refs/for/main
    porfs = push origin HEAD:refs/for/staging

    sshow = "!f() { git stash show stash^{/$*} -p; }; f"
    sapply = "!f() { git stash apply stash^{/$*}; }; f"

	d = difftool
    dc = difftool --cached
    dns = diff --name-status
    outgoing = log origin..main

[color]
	ui = true

[core]
	editor = "mvim -f"
	excludesfile = /Users/nielsm/.gitignore
	autocrlf = false

[diff]
	tool = mvimdiff

[difftool "mvimdiff"]
  cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
    
[difftool]
	prompt = false

[merge]
    defaultToUpstream = true
	tool = gvimdiff

