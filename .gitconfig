[alias]
    ca = commit -am
    caa = commit -a --amend --no-edit
    cm = commit -m
    ci = commit
    co = checkout
    s = status
    l = log --pretty=oneline --abbrev-commit
    gl = log --graph --pretty=oneline --abbrev-commit

    r = rebase
    ri = rebase --interactive

    pr = pull --rebase

    st = stash
    sp = stash pop

    po = push origin
    pom = push origin master

	d = difftool
    outgoing = log origin..master
[color]
	ui = true
[core]
	editor = "gvim -f"
    excludesfile = ~/.global_gitignore
[diff]
	tool = gvimdiff
[difftool]
	prompt = false
[merge]
    defaultToUpstream = true
	tool = gvimdiff
[user]
	name = nielsmadan
	email = nielsmadan@gmail.com
[push]
	default = simple
