[alias]
    ca = commit -am
    caa = commit -a --amend --no-edit
    cm = commit -m
    ci = commit

    co = checkout
    com = checkout main
    cob = checkout -b

    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue

    bl = branch -l
    bd = branch -D

    s = status

    l = log --pretty=oneline --abbrev-commit
    gl = log --graph --pretty=oneline --abbrev-commit

    r = rebase
    rbi = rebase --interactive
    rbm = rebase main
    rbc = rebase --continue
    rba = rebase --abort

    rhom = reset --hard origin/main

    pr = pull --rebase

    st = stash
    stu = stash --keep-index
    sp = stash pop

    po = push origin
    pom = push origin main
    pof = push origin -f

    d = difftool
    dc = difftool --cached
    dns = diff --name-status
    outgoing = log origin..main

[color]
	ui = true

[core]
	editor = "mvim -f"
	excludesfile = /Users/nielsm/.gitignore
	autocrlf = false

[diff]
	tool = mvimdiff

[difftool "mvimdiff"]
  cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
    
[difftool]
	prompt = false

[merge]
  defaultToUpstream = true
	tool = gvimdiff

[user]
	name = Niels Madan
	email = nielsmadan@quantumcraft.io

[push]
	default = simple

[include]
  path = "/home/nielsm/.local_gitconfig"

[rerere]
	enabled = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[includeIf "gitdir:/Users/nielsmadan/wrksp/efg/"]
	path = /Users/nielsmadan/.gitconfig-efg
